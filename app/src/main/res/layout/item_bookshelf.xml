<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cover_height"
    android:background="@drawable/bg_cover">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_small"
        android:gravity="center_horizontal"
        android:textSize="@dimen/font_normal"
        android:textColor="@color/text_cover"
        android:text="百年孤独" />

    <ProgressBar
        android:id="@+id/pb_read"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="@dimen/cover_pb_width"
        android:layout_height="@dimen/cover_pb_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_normal"
        android:progressDrawable="@drawable/pb_cover"
        android:progress="10"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/pb_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pb_read"
        android:layout_alignBottom="@+id/pb_read"
        android:layout_marginLeft="2dp"
        android:textColor="@color/text_cover"
        android:textSize="6dp"
        android:text="10%"
        android:visibility="gone"/>

</RelativeLayout>